        console.log('Renderer added to DOM');

        // Initialize raycaster and mouse
        raycaster = new THREE.Raycaster();
        mouse = new THREE.Vector2();

        // Camera position
        camera.position.z = 50;

        // Create starfield
        createStarField();
        
        // Create planets
        createPlanets();
        
        // Create rockets
        createRockets();
        
        // Create mouse trail effect
