    <script>

      let scene, camera, renderer, starField, planets = [], rockets = [];
      let mouseX = 0, mouseY = 0;
      let time = 0;
      let mouseTrail = [];
      let raycaster, mouse;

      // Initialize the scene
      function init() {
        console.log('Initializing Three.js scene...');
        
        // Scene setup
