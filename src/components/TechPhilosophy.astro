---
interface Props {
  title?: string;
  subtitle?: string;
  philosophy?: string;
  techStacks: Array<{
    category: string;
    icon: string;
    description: string;
    technologies: string[];
    level: number; // 1-100 for power level
  }>;
}

const { 
  title = "CORE SYSTEMS & PHILOSOPHY",
  subtitle = "Technology Arsenal & Development Principles",
  philosophy = "I believe in vibe coding â€” building by intuition, creativity, and context, not just convention. Technology should amplify human potential, not constrain it. Every line of code is a choice between efficiency and elegance, between what works and what inspires.",
  techStacks = []
} = Astro.props;
---

<style>
  .tech-card:hover {
    transform: translateY(-4px);
  }

  .power-bar {
    background: linear-gradient(90deg, #00ffff 0%, #ff00ff 50%, #ffff00 100%);
    animation: power-flow 2s ease-in-out infinite alternate;
  }

  .tech-grid {
    perspective: 1000px;
  }

  .philosophy-text {
    background: linear-gradient(45deg, #00ffff, #ffffff, #ff00ff);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradient-flow 3s ease-in-out infinite;
  }

  .floating-particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: #00ffff;
    border-radius: 50%;
    animation: float-particle 4s ease-in-out infinite;
  }

  .scan-line {
    position: absolute;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, #00ffff, transparent);
    animation: scan 3s linear infinite;
  }

  @keyframes power-flow {
    0% { background-position: 0% 50%; }
    100% { background-position: 100% 50%; }
  }

  @keyframes gradient-flow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  @keyframes float-particle {
    0%, 100% { transform: translateY(0px) scale(1); opacity: 0.7; }
    25% { transform: translateY(-10px) scale(1.1); opacity: 1; }
    50% { transform: translateY(0px) scale(1.2); opacity: 0.8; }
    75% { transform: translateY(-5px) scale(1.1); opacity: 1; }
  }

  @keyframes scan {
    0% { top: 0; opacity: 0; }
    50% { opacity: 1; }
    100% { top: 100%; opacity: 0; }
  }

  .level-indicator {
    background: linear-gradient(90deg, #ff0080 0%, #00ffff 50%, #40ff40 100%);
    background-size: 200% 100%;
    animation: level-pulse 2s ease-in-out infinite alternate;
  }

  @keyframes level-pulse {
    0% { background-position: 0% 50%; }
    100% { background-position: 100% 50%; }
  }
</style>

<section class="w-full bg-transparent py-16 relative overflow-hidden">
  <!-- Floating Particles -->
  <div class="floating-particle" style="top: 10%; left: 10%; animation-delay: 0s;"></div>
  <div class="floating-particle" style="top: 20%; right: 15%; animation-delay: 1s;"></div>
  <div class="floating-particle" style="bottom: 30%; left: 20%; animation-delay: 2s;"></div>
  <div class="floating-particle" style="bottom: 10%; right: 25%; animation-delay: 3s;"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-16 relative">
      <div class="scan-line"></div>
      
      <!-- System Status -->
      <div class="inline-flex items-center space-x-2 bg-blue-900 bg-opacity-30 border border-blue-400 rounded-full px-4 py-2 mb-6">
        <div class="w-2 h-2 bg-blue-400 rounded-full animate-pulse"></div>
        <span class="text-blue-400 text-sm font-semibold uppercase tracking-wide">TECH STACK ANALYSIS</span>
      </div>

      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">
        {title}
      </h2>
      <p class="text-xl md:text-2xl text-cyan-400 font-semibold mb-8">
        {subtitle}
      </p>
      
      <!-- Philosophy Statement -->
      <div class="max-w-4xl mx-auto bg-black bg-opacity-50 border-2 border-cyan-400 rounded-lg p-8 relative">
        <div class="scan-line"></div>
        <div class="absolute top-4 left-4 text-xs text-cyan-400 font-mono opacity-60">
          PHILOSOPHY.LOG
        </div>
        <p class="text-lg md:text-xl leading-relaxed philosophy-text font-medium">
          {philosophy}
        </p>
      </div>
    </div>

    <!-- Tech Stacks Grid -->
    <div class="tech-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {techStacks.map((stack, index) => (
        <div class="tech-card bg-black bg-opacity-40 border-2 border-cyan-400 rounded-lg p-6 backdrop-blur-md hover:bg-opacity-60 transition-all duration-300 relative group overflow-hidden">
          <!-- Scan Line Effect -->
          <div class="scan-line opacity-0 group-hover:opacity-100"></div>
          
          <!-- Tech Category Header -->
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-3">
              <span class="text-3xl">{stack.icon}</span>
              <div>
                <h3 class="text-xl font-bold text-white group-hover:text-cyan-400 transition-colors">
                  {stack.category}
                </h3>
                <div class="flex items-center space-x-2">
                  <span class="text-sm text-gray-400">PWR LVL</span>
                  <div class="w-16 h-2 bg-gray-700 rounded-full overflow-hidden">
                    <div class="level-indicator h-full rounded-full" style={`width: ${stack.level}%`}></div>
                  </div>
                  <span class="text-sm text-cyan-400 font-mono">{stack.level}%</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Description -->
          <p class="text-gray-300 text-sm leading-relaxed mb-6">
            {stack.description}
          </p>

          <!-- Technologies -->
          <div class="space-y-2">
            <div class="text-xs text-cyan-400 uppercase tracking-wide font-semibold mb-3">
              ACTIVE MODULES
            </div>
            <div class="flex flex-wrap gap-2">
              {stack.technologies.map((tech, techIndex) => (
                <span class="text-xs bg-gray-900 text-green-400 px-2 py-1 rounded border border-green-600 font-mono hover:bg-green-900 hover:text-green-300 transition-colors">
                  {tech}
                </span>
              ))}
            </div>
          </div>

          <!-- Floating Data Points -->
          <div class="absolute top-2 right-2 text-xs text-cyan-400 font-mono opacity-60">
            SYS{String(index + 1).padStart(2, '0')}
          </div>
        </div>
      ))}
    </div>

    <!-- System Status Footer -->
    <div class="text-center mt-16">
      <div class="inline-flex items-center space-x-4 bg-black bg-opacity-60 border border-gray-600 rounded-lg px-6 py-3">
        <div class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
          <span class="text-green-400 text-sm font-mono">ALL SYSTEMS ONLINE</span>
        </div>
        <div class="w-px h-4 bg-gray-600"></div>
        <div class="text-xs text-gray-400 font-mono">
          LAST UPDATE: {new Date().toISOString().split('T')[0]}
        </div>
      </div>
    </div>

  </div>
</section>