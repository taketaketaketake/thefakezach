---
interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  email?: string;
  calendlyUrl?: string;
  services: Array<{
    icon: string;
    title: string;
    description: string;
    timeline: string;
  }>;
}

const {
  title = "MISSION COMMANDER AVAILABLE",
  subtitle = "Ready for Your Next Digital Frontier",
  description = "Looking for a developer who builds by intuition, ships with precision, and brings creative vision to technical challenges? Let's build something extraordinary together.",
  email = "zach@takedetroit.com",
  calendlyUrl = "#",
  services = []
} = Astro.props;
---

<style>
  .hire-card {
    background: linear-gradient(135deg, rgba(0, 255, 255, 0.1) 0%, rgba(255, 0, 128, 0.1) 100%);
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
  }

  .hire-card:hover {
    background: linear-gradient(135deg, rgba(0, 255, 255, 0.2) 0%, rgba(255, 0, 128, 0.2) 100%);
    transform: translateY(-8px) scale(1.02);
  }

  .availability-pulse {
    animation: availability-pulse 2s ease-in-out infinite;
  }

  .urgent-blink {
    animation: urgent-blink 1.5s ease-in-out infinite alternate;
  }

  .hologram-text {
    background: linear-gradient(45deg, #00ffff, #ff00ff, #ffff00, #00ffff);
    background-size: 400% 400%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: hologram-flow 3s ease-in-out infinite;
  }

  .contact-button {
    background: linear-gradient(45deg, #ff0080, #00ffff, #ff0080);
    background-size: 200% 200%;
    animation: button-glow 2s ease-in-out infinite alternate;
    position: relative;
    overflow: hidden;
  }

  .contact-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s;
  }

  .contact-button:hover::before {
    left: 100%;
  }

  .service-timeline {
    background: linear-gradient(90deg, #00ffff, #ff00ff);
    background-size: 200% 100%;
    animation: timeline-flow 3s linear infinite;
  }

  .radar-sweep {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 200px;
    height: 200px;
    border: 2px solid #00ffff;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    opacity: 0.3;
    animation: radar-sweep 4s linear infinite;
  }

  .floating-code {
    position: absolute;
    font-family: 'Courier New', monospace;
    font-size: 12px;
    color: #00ffff;
    opacity: 0.6;
    animation: float-code 6s ease-in-out infinite;
  }

  @keyframes availability-pulse {
    0%, 100% { box-shadow: 0 0 20px rgba(0, 255, 0, 0.6); }
    50% { box-shadow: 0 0 40px rgba(0, 255, 0, 0.9); }
  }

  @keyframes urgent-blink {
    0% { color: #ff0080; text-shadow: 0 0 10px #ff0080; }
    100% { color: #00ffff; text-shadow: 0 0 20px #00ffff; }
  }

  @keyframes hologram-flow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  @keyframes button-glow {
    0% { background-position: 0% 50%; box-shadow: 0 0 20px rgba(255, 0, 128, 0.5); }
    100% { background-position: 100% 50%; box-shadow: 0 0 30px rgba(0, 255, 255, 0.7); }
  }

  @keyframes timeline-flow {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
  }

  @keyframes radar-sweep {
    0% { transform: translate(-50%, -50%) scale(0.5) rotate(0deg); opacity: 0.8; }
    50% { transform: translate(-50%, -50%) scale(1) rotate(180deg); opacity: 0.3; }
    100% { transform: translate(-50%, -50%) scale(1.5) rotate(360deg); opacity: 0; }
  }

  @keyframes float-code {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    25% { transform: translateY(-10px) rotate(2deg); }
    50% { transform: translateY(-5px) rotate(-1deg); }
    75% { transform: translateY(-12px) rotate(1deg); }
  }
</style>

<section class="w-full bg-transparent py-16 relative overflow-hidden">
  <!-- Floating Code Elements -->
  <div class="floating-code" style="top: 10%; left: 5%; animation-delay: 0s;">const hire = true;</div>
  <div class="floating-code" style="top: 30%; right: 10%; animation-delay: 2s;">AI.integrate();</div>
  <div class="floating-code" style="bottom: 20%; left: 15%; animation-delay: 4s;">deploy.now();</div>
  <div class="floating-code" style="bottom: 40%; right: 20%; animation-delay: 1s;">build.future();</div>

  <!-- Radar Sweep Animation -->
  <div class="radar-sweep"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Availability Alert -->
    <div class="text-center mb-12">
      <div class="inline-flex items-center space-x-3 bg-green-900 bg-opacity-40 border-2 border-green-400 rounded-full px-6 py-3 mb-6 availability-pulse">
        <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
        <span class="text-green-400 font-bold uppercase tracking-wide urgent-blink">
          CURRENTLY ACCEPTING MISSIONS
        </span>
        <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
      </div>
    </div>

    <!-- Main Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 hologram-text">
        {title}
      </h2>
      <p class="text-xl md:text-2xl text-cyan-400 font-semibold mb-6">
        {subtitle}
      </p>
      <p class="text-lg text-gray-300 max-w-3xl mx-auto leading-relaxed">
        {description}
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
      {services.map((service, index) => (
        <div class="hire-card border-2 border-cyan-400 rounded-lg p-6 text-center group">
          <!-- Service Icon -->
          <div class="text-5xl mb-4 group-hover:scale-110 transition-transform duration-300">
            {service.icon}
          </div>
          
          <!-- Service Title -->
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-cyan-400 transition-colors">
            {service.title}
          </h3>
          
          <!-- Service Description -->
          <p class="text-gray-300 text-sm leading-relaxed mb-4">
            {service.description}
          </p>
          
          <!-- Timeline -->
          <div class="flex items-center justify-center space-x-2">
            <span class="text-xs text-gray-400">DELIVERY:</span>
            <div class="service-timeline text-xs text-white px-3 py-1 rounded-full font-mono">
              {service.timeline}
            </div>
          </div>

          <!-- Mission ID -->
          <div class="absolute top-2 right-2 text-xs text-cyan-400 font-mono opacity-60">
            M{String(index + 1).padStart(2, '0')}
          </div>
        </div>
      ))}
    </div>

    <!-- Contact Section -->
    <div class="text-center">
      <!-- Contact Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12 max-w-4xl mx-auto">
        
        <!-- Email Contact -->
        <div class="bg-black bg-opacity-50 border-2 border-pink-500 rounded-lg p-8 relative group">
          <div class="text-4xl mb-4">ðŸ“¡</div>
          <h3 class="text-xl font-bold text-white mb-3">DIRECT TRANSMISSION</h3>
          <p class="text-gray-300 mb-6">Ready to discuss your project requirements and timeline.</p>
          <a 
            href={`mailto:${email}`}
            class="contact-button inline-block text-white font-bold py-3 px-6 rounded-lg text-lg transition-all duration-300 uppercase tracking-wide"
          >
            Send Message
          </a>
          <div class="absolute top-2 right-2 text-xs text-pink-400 font-mono">
            PRIORITY_1
          </div>
        </div>

        <!-- Calendar Booking -->
        <div class="bg-black bg-opacity-50 border-2 border-cyan-400 rounded-lg p-8 relative group">
          <div class="text-4xl mb-4">ðŸš€</div>
          <h3 class="text-xl font-bold text-white mb-3">MISSION BRIEFING</h3>
          <p class="text-gray-300 mb-6">Schedule a strategic consultation to align on objectives.</p>
          <a 
            href={calendlyUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="contact-button inline-block text-white font-bold py-3 px-6 rounded-lg text-lg transition-all duration-300 uppercase tracking-wide"
          >
            Book Session
          </a>
          <div class="absolute top-2 right-2 text-xs text-cyan-400 font-mono">
            PRIORITY_1
          </div>
        </div>

      </div>

      <!-- Status Footer -->
      <div class="bg-black bg-opacity-60 border border-gray-600 rounded-lg px-6 py-4 inline-block">
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-2">
            <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
            <span class="text-green-400 text-sm font-mono">SYSTEMS READY</span>
          </div>
          <div class="w-px h-4 bg-gray-600"></div>
          <div class="text-xs text-gray-400 font-mono">
            RESPONSE_TIME: &lt;24H
          </div>
          <div class="w-px h-4 bg-gray-600"></div>
          <div class="text-xs text-gray-400 font-mono">
            TIMEZONE: EST
          </div>
        </div>
      </div>

    </div>

  </div>
</section>