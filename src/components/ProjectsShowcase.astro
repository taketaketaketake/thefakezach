---
interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  buttonText?: string;
  buttonHref?: string;
  projects: Array<{
    title: string;
    summary: string;
    year: string;
    emoji: string;
    tech: string[];
    link?: string;
    github?: string;
  }>;
}

const { 
  title = "ACTIVE MISSIONS",
  subtitle = "Current Projects in Development",
  description = "Exploring the boundaries of technology through innovative platforms, AI-powered solutions, and interactive digital experiences.",
  buttonText = "View All Projects",
  buttonHref = "/projects",
  projects = []
} = Astro.props;
---

<section class="w-full bg-transparent py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">
        {title}
      </h2>
      <p class="text-xl md:text-2xl text-cyan-400 font-semibold mb-6">
        {subtitle}
      </p>
      <p class="text-lg text-gray-300 max-w-3xl mx-auto leading-relaxed">
        {description}
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {projects.slice(0, 6).map((project) => (
        <article class="bg-black bg-opacity-40 border-2 border-cyan-400 rounded-lg p-6 backdrop-blur-md hover:border-pink-500 hover:bg-opacity-60 hover:scale-105 transition-all duration-300 group">
          
          <!-- Project Header -->
          <div class="flex items-center justify-between mb-4">
            <span class="text-4xl">{project.emoji}</span>
            <span class="text-sm font-bold text-pink-400 uppercase tracking-wide">
              {project.year}
            </span>
          </div>

          <!-- Project Title -->
          <h3 class="text-xl md:text-2xl font-bold text-white mb-4 group-hover:text-cyan-400 transition-colors">
            {project.title}
          </h3>

          <!-- Project Summary -->
          <p class="text-gray-300 leading-relaxed mb-6 text-sm">
            {project.summary}
          </p>

          <!-- Tech Stack -->
          <div class="mb-6">
            <div class="flex flex-wrap gap-2">
              {project.tech.slice(0, 3).map((tech) => (
                <span class="text-xs bg-gray-800 text-cyan-400 px-2 py-1 rounded border border-cyan-600">
                  {tech}
                </span>
              ))}
              {project.tech.length > 3 && (
                <span class="text-xs bg-gray-800 text-gray-400 px-2 py-1 rounded border border-gray-600">
                  +{project.tech.length - 3} more
                </span>
              )}
            </div>
          </div>

          <!-- Project Links -->
          <div class="flex items-center justify-between">
            {project.link && project.link !== "#" ? (
              <a 
                href={project.link}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-cyan-400 hover:text-pink-400 font-semibold transition-colors text-sm group"
              >
                <span>View Project</span>
                <svg class="w-3 h-3 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </a>
            ) : (
              <span class="text-gray-500 text-sm">Coming Soon</span>
            )}
            
            {project.github && project.github !== "#" && (
              <a 
                href={project.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-white transition-colors"
                title="View Source"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            )}
          </div>

        </article>
      ))}
    </div>

    <!-- View All Button -->
    <div class="text-center">
      <a 
        href={buttonHref}
        class="inline-block bg-gradient-to-r from-pink-500 to-cyan-400 text-white font-bold py-4 px-8 rounded-lg text-lg hover:scale-105 hover:shadow-lg hover:shadow-pink-500/25 transition-all duration-300 uppercase tracking-wide"
      >
        {buttonText}
      </a>
    </div>

  </div>
</section>