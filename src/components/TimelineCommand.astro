---
interface Props {
  title?: string;
  subtitle?: string;
  events: Array<{
    year: string;
    title: string;
    description: string;
    type: 'project' | 'milestone' | 'achievement' | 'launch';
    status: 'completed' | 'active' | 'upcoming';
    tech?: string[];
  }>;
}

const {
  title = "MISSION TIMELINE",
  subtitle = "Command History & Active Operations",
  events = []
} = Astro.props;
---

<style>
  .terminal-container {
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.9) 0%, rgba(0, 20, 20, 0.8) 100%);
    border: 2px solid #00ffff;
    backdrop-filter: blur(15px);
    position: relative;
    overflow: hidden;
  }

  .terminal-header {
    background: linear-gradient(90deg, #00ffff, #ff00ff, #00ffff);
    background-size: 200% 100%;
    animation: header-flow 3s linear infinite;
  }

  .timeline-item {
    border-left: 2px solid #404040;
    transition: all 0.4s ease;
    position: relative;
  }

  .timeline-item:hover {
    border-left-color: #00ffff;
  }

  .timeline-item.completed {
    border-left-color: #00ff00;
  }

  .timeline-item.active {
    border-left-color: #ffff00;
    animation: active-pulse 2s ease-in-out infinite;
  }

  .timeline-item.upcoming {
    border-left-color: #ff00ff;
  }

  .timeline-dot {
    position: absolute;
    left: -6px;
    top: 1rem;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    border: 2px solid;
    transition: all 0.3s ease;
  }

  .timeline-dot.completed {
    background: #00ff00;
    border-color: #00ff00;
    box-shadow: 0 0 10px #00ff00;
  }

  .timeline-dot.active {
    background: #ffff00;
    border-color: #ffff00;
    box-shadow: 0 0 15px #ffff00;
    animation: dot-pulse 1.5s ease-in-out infinite;
  }

  .timeline-dot.upcoming {
    background: transparent;
    border-color: #ff00ff;
  }

  .terminal-line {
    font-family: 'Courier New', monospace;
    color: #00ff00;
    margin: 4px 0;
    opacity: 0;
    animation: type-in 0.5s ease-out forwards;
  }

  .command-prompt {
    color: #00ffff;
    margin-right: 8px;
  }

  .event-card {
    background: rgba(0, 0, 0, 0.6);
    border: 1px solid rgba(0, 255, 255, 0.3);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .event-card:hover {
    border-color: #00ffff;
    background: rgba(0, 50, 50, 0.4);
    transform: translateX(8px);
  }

  .scan-line {
    position: absolute;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, #00ffff, transparent);
    animation: scan 2s linear infinite;
    opacity: 0;
  }

  .event-card:hover .scan-line {
    opacity: 1;
  }

  .tech-tag {
    background: rgba(0, 255, 255, 0.1);
    border: 1px solid #00ffff;
    color: #00ffff;
    transition: all 0.2s ease;
  }

  .tech-tag:hover {
    background: rgba(0, 255, 255, 0.2);
    transform: scale(1.05);
  }

  .typing-cursor {
    animation: cursor-blink 1s infinite;
  }

  .progress-bar {
    background: linear-gradient(90deg, #00ff00, #ffff00, #ff00ff);
    background-size: 200% 100%;
    animation: progress-flow 2s ease-in-out infinite alternate;
  }

  @keyframes header-flow {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
  }

  @keyframes active-pulse {
    0%, 100% { border-left-color: #ffff00; }
    50% { border-left-color: #ff8800; }
  }

  @keyframes dot-pulse {
    0%, 100% { box-shadow: 0 0 5px #ffff00; }
    50% { box-shadow: 0 0 20px #ffff00, 0 0 30px #ffff00; }
  }

  @keyframes type-in {
    from { opacity: 0; transform: translateX(-10px); }
    to { opacity: 1; transform: translateX(0); }
  }

  @keyframes scan {
    0% { top: 0; opacity: 0; }
    50% { opacity: 1; }
    100% { top: 100%; opacity: 0; }
  }

  @keyframes cursor-blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  @keyframes progress-flow {
    0% { background-position: 0% 50%; }
    100% { background-position: 100% 50%; }
  }
</style>

<section class="w-full bg-transparent py-16 relative overflow-hidden">
  <!-- Floating Terminal Characters -->
  <div class="absolute top-10 left-10 text-green-400 font-mono text-xs opacity-30 animate-pulse">
    > executing timeline.sh
  </div>
  <div class="absolute top-20 right-15 text-cyan-400 font-mono text-xs opacity-30" style="animation-delay: 2s;">
    [SUCCESS] mission_data.loaded
  </div>
  <div class="absolute bottom-20 left-20 text-yellow-400 font-mono text-xs opacity-30" style="animation-delay: 4s;">
    $ git log --oneline
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Terminal Header -->
    <div class="terminal-container rounded-lg mb-8">
      <!-- Terminal Title Bar -->
      <div class="terminal-header p-4 flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="flex space-x-2">
            <div class="w-3 h-3 bg-red-500 rounded-full"></div>
            <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
          </div>
          <span class="text-black font-mono text-sm font-bold">TIMELINE_COMMAND.exe</span>
        </div>
        <div class="text-black font-mono text-xs">
          USER: zachary_lewis | PWD: /portfolio/timeline
        </div>
      </div>

      <!-- Terminal Content -->
      <div class="p-6 space-y-2">
        <div class="terminal-line" style="animation-delay: 0.5s;">
          <span class="command-prompt">zach@portfolio:~$</span>
          <span class="text-white">cat mission_history.log</span>
        </div>
        <div class="terminal-line" style="animation-delay: 1s;">
          <span class="text-gray-400"># Loading mission timeline...</span>
        </div>
        <div class="terminal-line" style="animation-delay: 1.5s;">
          <span class="text-green-400">[INFO] Found {events.length} mission entries</span>
        </div>
        <div class="terminal-line" style="animation-delay: 2s;">
          <span class="text-cyan-400">[STATUS] Timeline reconstruction complete</span>
        </div>
        <div class="terminal-line" style="animation-delay: 2.5s;">
          <span class="command-prompt">zach@portfolio:~$</span>
          <span class="text-white">./display_timeline --format=interactive</span>
          <span class="typing-cursor text-green-400">|</span>
        </div>
      </div>
    </div>

    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center space-x-2 bg-blue-900 bg-opacity-30 border border-blue-400 rounded-full px-4 py-2 mb-6">
        <div class="w-2 h-2 bg-blue-400 rounded-full animate-pulse"></div>
        <span class="text-blue-400 text-sm font-semibold uppercase tracking-wide">CHRONOLOGICAL DATA</span>
      </div>

      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">
        {title}
      </h2>
      <p class="text-xl md:text-2xl text-cyan-400 font-semibold">
        {subtitle}
      </p>
    </div>

    <!-- Timeline -->
    <div class="max-w-4xl mx-auto">
      <div class="relative">
        <!-- Progress Indicator -->
        <div class="absolute left-4 top-0 bottom-0 w-0.5 progress-bar opacity-30"></div>

        <!-- Timeline Events -->
        <div class="space-y-8">
          {events.map((event, index) => (
            <div class={`timeline-item ${event.status} pl-12 relative`}>
              <div class={`timeline-dot ${event.status}`}></div>
              
              <div class="event-card rounded-lg p-6 relative">
                <div class="scan-line"></div>
                
                <!-- Event Header -->
                <div class="flex items-start justify-between mb-4">
                  <div>
                    <div class="flex items-center space-x-3 mb-2">
                      <span class="text-cyan-400 font-mono text-sm font-bold">
                        {event.year}
                      </span>
                      <span class={`text-xs px-2 py-1 rounded uppercase font-bold ${
                        event.status === 'completed' ? 'bg-green-900 text-green-400 border border-green-400' :
                        event.status === 'active' ? 'bg-yellow-900 text-yellow-400 border border-yellow-400' :
                        'bg-purple-900 text-purple-400 border border-purple-400'
                      }`}>
                        {event.status}
                      </span>
                      <span class={`text-xs px-2 py-1 rounded font-mono ${
                        event.type === 'project' ? 'bg-blue-900 text-blue-400' :
                        event.type === 'milestone' ? 'bg-green-900 text-green-400' :
                        event.type === 'achievement' ? 'bg-purple-900 text-purple-400' :
                        'bg-red-900 text-red-400'
                      }`}>
                        {event.type.toUpperCase()}
                      </span>
                    </div>
                    <h3 class="text-xl md:text-2xl font-bold text-white mb-2">
                      {event.title}
                    </h3>
                  </div>
                  <div class="text-xs text-cyan-400 font-mono opacity-60">
                    EVT{String(index + 1).padStart(3, '0')}
                  </div>
                </div>

                <!-- Event Description -->
                <p class="text-gray-300 leading-relaxed mb-4">
                  {event.description}
                </p>

                <!-- Tech Stack -->
                {event.tech && event.tech.length > 0 && (
                  <div>
                    <div class="text-xs text-cyan-400 uppercase tracking-wide font-semibold mb-2">
                      TECH_STACK:
                    </div>
                    <div class="flex flex-wrap gap-2">
                      {event.tech.map((tech) => (
                        <span class="tech-tag text-xs px-2 py-1 rounded font-mono">
                          {tech}
                        </span>
                      ))}
                    </div>
                  </div>
                )}

                <!-- Terminal Command Reference -->
                <div class="mt-4 bg-black bg-opacity-50 border border-gray-600 rounded p-2">
                  <span class="text-green-400 font-mono text-xs">
                    > git show --stat {event.year.toLowerCase().replace(/\s+/g, '_')}
                  </span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Terminal Footer -->
    <div class="mt-16 text-center">
      <div class="bg-black bg-opacity-60 border border-gray-600 rounded-lg px-6 py-4 inline-block font-mono">
        <div class="flex items-center space-x-4 text-sm">
          <div class="flex items-center space-x-2">
            <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
            <span class="text-green-400">TIMELINE_LOADED</span>
          </div>
          <div class="w-px h-4 bg-gray-600"></div>
          <div class="text-gray-400">
            ENTRIES: {events.length}
          </div>
          <div class="w-px h-4 bg-gray-600"></div>
          <div class="text-gray-400">
            STATUS: LIVE
          </div>
        </div>
      </div>
    </div>

  </div>
</section>