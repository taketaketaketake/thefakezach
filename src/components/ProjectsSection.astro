---
import Card from "../components/Card.astro";

const { projects = [] } = Astro.props;
---

<section id="projects" class="w-full" aria-labelledby="projects-heading">
  <h2 id="projects-heading" class="text-2xl font-bold text-white mb-6">Projects</h2>

  <div
    class="grid grid-cols-2 md:grid-cols-3 gap-5 w-full"
  >
    {projects.map((project) => (
      <Card project={project} />
    ))}
  </div>
</section>
