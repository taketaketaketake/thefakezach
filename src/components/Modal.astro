---
import "../styles/global.css";

const { project } = Astro.props;

// Guard clause â€” skip rendering if no project is provided
if (!project) {
  return null;
}

// Use project data directly
const page = {
  title: project.title || "Untitled Project",
  emoji: project.emoji || "ðŸ’¡",
  year: project.year || "2024",
  summary: project.summary || "Project description not available.",
  spark: project.spark || "What inspired this project.",
  whatItDoes: project.whatItDoes || "What this project does.",
  tech: project.tech || ["Coming Soon"],
  status: project.status || "shipped",
  link: project.link && project.link !== "#" ? project.link : null,
  github: project.github && project.github !== "#" ? project.github : null,
};

const slug = project.title.toLowerCase().replace(/ /g, "-");

// Status badge styles
type Status = "shipped" | "in-progress" | "archived";

const statusStyles: Record<Status, string> = {
  shipped: "bg-green-500/20 text-green-400 border-green-500/30",
  "in-progress": "bg-yellow-500/20 text-yellow-400 border-yellow-500/30",
  archived: "bg-zinc-500/20 text-zinc-400 border-zinc-500/30",
};

const statusLabels: Record<Status, string> = {
  shipped: "Shipped",
  "in-progress": "In Progress",
  archived: "Archived",
};

const status = (page.status as Status) || "shipped";
---

<!-- Backdrop -->
<div
  id={`modal-${slug}`}
  class="fixed inset-0 bg-black/70 hidden items-center justify-center z-50"
  aria-hidden="true"
>
  <!-- Modal Content -->
  <div
    class="bg-zinc-900 text-zinc-50 p-8 rounded-2xl max-w-4xl w-[90%] shadow-lg overflow-y-auto max-h-[90vh] animate-fadeIn"
  >
    <header class="flex justify-between items-start mb-8">
      <div>
        <div class="flex items-center gap-3 mb-4">
          <span class="text-5xl">{page.emoji}</span>
          <span class={`px-3 py-1 text-xs font-medium rounded-full border ${statusStyles[status]}`}>
            {statusLabels[status]}
          </span>
        </div>
        <h1 class="text-3xl font-extrabold text-white mb-2">{page.title}</h1>
        <p class="text-zinc-400">{page.summary}</p>
        <p class="text-xs text-zinc-600 mt-2">{page.year}</p>
      </div>
      <button
        id={`close-${slug}`}
        aria-label="Close modal"
        class="text-3xl leading-none text-zinc-400 hover:text-white transition"
      >
        &times;
      </button>
    </header>

    <section class="space-y-10">
      <article>
        <h2 class="text-2xl font-bold text-white mb-3">The Spark</h2>
        <p class="text-zinc-400 leading-relaxed whitespace-pre-line">
          {page.spark}
        </p>
      </article>

      <article>
        <h2 class="text-2xl font-bold text-white mb-3">What It Does</h2>
        <p class="text-zinc-400 leading-relaxed whitespace-pre-line">
          {page.whatItDoes}
        </p>
      </article>

      <article>
        <h2 class="text-2xl font-bold text-white mb-3">Built With</h2>
        <ul class="flex flex-wrap gap-3">
          {page.tech.map((tool) => (
            <li
              class="px-3 py-1 text-sm bg-zinc-800 text-zinc-300 rounded-full border border-zinc-700"
            >
              {tool}
            </li>
          ))}
        </ul>
      </article>

      {(page.link || page.github) && (
        <article class="space-y-4">
          <h2 class="text-2xl font-bold text-white mb-3">Links</h2>
          <div class="space-y-2">
            {page.link && (
              <div>
                <span class="text-zinc-400 text-sm">Live Project: </span>
                <a
                  href={page.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-pink-400 hover:underline break-all"
                >
                  {page.link}
                </a>
              </div>
            )}
            {page.github && (
              <div>
                <span class="text-zinc-400 text-sm">Source Code: </span>
                <a
                  href={page.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-pink-400 hover:underline break-all"
                >
                  {page.github}
                </a>
              </div>
            )}
          </div>
        </article>
      )}
    </section>

    <footer
      class="border-t border-zinc-800 mt-16 pt-6 text-center text-sm text-zinc-500"
    >
      Â© {new Date().getFullYear()} Zachary
    </footer>
  </div>
</div>
