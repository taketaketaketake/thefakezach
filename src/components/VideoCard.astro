---
const { video } = Astro.props;
---

<div
  class="group relative bg-zinc-900/50 border border-zinc-800 rounded-xl overflow-hidden
         hover:border-pink-500/30 transition duration-300"
>
  <!-- Video embed -->
  <div class="aspect-video overflow-hidden">
    <iframe
      src={video.embedUrl}
      title={video.title}
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen
      class="w-full h-full object-cover"
    ></iframe>
  </div>

  <!-- Text content -->
  <div class="p-4">
    <h3
      class="text-white font-semibold text-base md:text-lg mb-1 group-hover:text-pink-400 transition"
    >
      {video.title}
    </h3>

    {video.description && (
      <p class="text-zinc-400 text-sm leading-snug">{video.description}</p>
    )}
  </div>
</div>
