---
interface Props {
  title?: string;
  subtitle?: string;
  posts: Array<{
    title: string;
    excerpt: string;
    date: string;
    readTime: string;
    category: string;
    slug: string;
  }>;
}

const { 
  title = "MISSION LOGS", 
  subtitle = "Dispatches from the Digital Frontier",
  posts = [] 
} = Astro.props;
---

<section class="w-full bg-transparent py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">
        {title}
      </h2>
      <p class="text-xl md:text-2xl text-cyan-400 font-semibold">
        {subtitle}
      </p>
    </div>

    <!-- Blog Posts Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map((post) => (
        <article class="bg-black bg-opacity-40 border-2 border-cyan-400 rounded-lg p-6 backdrop-blur-md hover:border-pink-500 hover:bg-opacity-60 transition-all duration-300 group">
          
          <!-- Category & Date -->
          <div class="flex justify-between items-center mb-4">
            <span class="text-sm font-bold text-pink-400 uppercase tracking-wide">
              {post.category}
            </span>
            <div class="text-sm text-gray-400">
              <span>{post.date}</span>
              <span class="mx-2">â€¢</span>
              <span>{post.readTime}</span>
            </div>
          </div>

          <!-- Title -->
          <h3 class="text-xl md:text-2xl font-bold text-white mb-4 group-hover:text-cyan-400 transition-colors">
            <a href={`/blog/${post.slug}`} class="hover:underline">
              {post.title}
            </a>
          </h3>

          <!-- Excerpt -->
          <p class="text-gray-300 leading-relaxed mb-6 line-clamp-3">
            {post.excerpt}
          </p>

          <!-- Read More -->
          <div class="flex items-center justify-between">
            <a 
              href={`/blog/${post.slug}`}
              class="inline-flex items-center text-cyan-400 hover:text-pink-400 font-semibold transition-colors group"
            >
              <span>Read Transmission</span>
              <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>

        </article>
      ))}
    </div>

    <!-- View All Button -->
    <div class="text-center mt-12">
      <a 
        href="/blog"
        class="inline-block bg-gradient-to-r from-pink-500 to-cyan-400 text-white font-bold py-4 px-8 rounded-lg text-lg hover:scale-105 hover:shadow-lg hover:shadow-pink-500/25 transition-all duration-300 uppercase tracking-wide"
      >
        View All Transmissions
      </a>
    </div>

  </div>
</section>