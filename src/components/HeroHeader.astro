---
interface Props {
  title: string;
  paragraph: string;
  imageUrl: string;
  imageAlt?: string;
  fullHeight?: boolean;
}

const { title, paragraph, imageUrl, imageAlt = "", fullHeight = true } = Astro.props;
---

<style>
  .glitch-text {
    animation: glitch 0.3s ease-in-out infinite alternate;
  }

  .typing-text {
    border-right: 2px solid #00ffff;
    animation: typing 2s steps(22) 1s infinite;
  }

  .cursor {
    animation: blink 1s infinite;
  }

  .animate-spin-slow {
    animation: spin-slow 8s linear infinite;
  }

  @keyframes glitch {
    0% { text-shadow: 0.05em 0 0 #00ffff, -0.03em -0.04em 0 #ff00ff, 0.025em 0.04em 0 #ffff00; }
    15% { text-shadow: 0.05em 0 0 #00ffff, -0.03em -0.04em 0 #ff00ff, 0.025em 0.04em 0 #ffff00; }
    16% { text-shadow: -0.05em -0.025em 0 #00ffff, 0.025em 0.035em 0 #ff00ff, -0.05em -0.05em 0 #ffff00; }
    49% { text-shadow: -0.05em -0.025em 0 #00ffff, 0.025em 0.035em 0 #ff00ff, -0.05em -0.05em 0 #ffff00; }
    50% { text-shadow: 0.05em 0.035em 0 #00ffff, 0.03em 0 0 #ff00ff, 0 -0.04em 0 #ffff00; }
    99% { text-shadow: 0.05em 0.035em 0 #00ffff, 0.03em 0 0 #ff00ff, 0 -0.04em 0 #ffff00; }
    100% { text-shadow: -0.05em 0 0 #00ffff, -0.025em -0.04em 0 #ff00ff, -0.04em -0.025em 0 #ffff00; }
  }

  @keyframes typing {
    0%, 50% { border-color: transparent; }
    51%, 100% { border-color: #00ffff; }
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  @keyframes spin-slow {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
</style>

<section class={`w-full bg-transparent flex items-center justify-center ${fullHeight ? 'min-h-screen' : 'py-16'}`}>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col lg:grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <!-- Left Column: Title and Paragraph -->
      <div class="space-y-6 text-center lg:text-left">
        <!-- Status Badge -->
        <div class="inline-flex items-center space-x-2 bg-green-900 bg-opacity-30 border border-green-400 rounded-full px-4 py-2 mb-4">
          <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
          <span class="text-green-400 text-sm font-semibold uppercase tracking-wide">SYSTEMS OPERATIONAL</span>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight glitch-text">
          {title}
        </h1>
        
        <!-- Subtitle with typing effect -->
        <div class="text-cyan-400 text-xl md:text-2xl font-semibold mb-4">
          <span class="typing-text">CHIEF TECHNOLOGY OFFICER</span>
          <span class="cursor">|</span>
        </div>
        
        <p class="text-lg md:text-xl text-gray-300 leading-relaxed">
          {paragraph}
        </p>

        <!-- Stats Grid -->
        <div class="grid grid-cols-3 gap-4 pt-6 max-w-sm mx-auto lg:mx-0 lg:max-w-md">
          <div class="text-center">
            <div class="text-xl md:text-2xl font-bold text-cyan-400">25M+</div>
            <div class="text-xs text-gray-400 uppercase tracking-wide">Video Views</div>
          </div>
          <div class="text-center">
            <div class="text-xl md:text-2xl font-bold text-cyan-400">6</div>
            <div class="text-xs text-gray-400 uppercase tracking-wide">Active Projects</div>
          </div>
          <div class="text-center">
            <div class="text-xl md:text-2xl font-bold text-cyan-400">8+</div>
            <div class="text-xs text-gray-400 uppercase tracking-wide">Years Building</div>
          </div>
        </div>
      </div>
      
      <!-- Right Column: Profile Image -->
      <div class="flex justify-center lg:justify-end mt-8 lg:mt-0">
        <div class="relative">
          <!-- Single Clean Profile Image -->
          <div class="relative w-48 h-48 md:w-64 md:h-64 lg:w-80 lg:h-80 rounded-full overflow-hidden border-4 border-cyan-400 shadow-2xl">
            <img 
              src={imageUrl} 
              alt={imageAlt}
              class="w-full h-full object-cover"
              loading="eager"
            />
            
            <!-- Subtle Holographic Overlay -->
            <div class="absolute inset-0 bg-gradient-to-br from-cyan-400/10 via-transparent to-pink-500/10 pointer-events-none"></div>
          </div>

          <!-- Floating Data Points - Only show on larger screens -->
          <div class="hidden md:block absolute -top-2 -right-2 bg-black bg-opacity-80 border border-cyan-400 rounded px-3 py-1 text-xs text-cyan-400 font-mono animate-pulse">
            ID: ZL-2025
          </div>
          <div class="hidden md:block absolute -bottom-2 -left-2 bg-black bg-opacity-80 border border-green-400 rounded px-3 py-1 text-xs text-green-400 font-mono">
            STATUS: ACTIVE
          </div>
        </div>
      </div>
    </div>
  </div>
</section>